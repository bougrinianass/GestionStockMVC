@model Produit

<h2>@Model.Name</h2>
<p>@Model.Quantity unité(s) restante(s) dans le stock </p>
<p>Prix : <strong>@Model.Price.ToString("C")</strong></p>

<form method="post" asp-action="AjouterAuPanier" asp-controller="Boutique">
    <input type="hidden" name="produitId" value="@Model.Id" />
    <label>Quantité :</label>
    <input type="number" name="quantite" value="1" min="1" class="form-control" />
    <button type="submit" class="btn btn-success mt-2">Ajouter dans le panier</button>
</form>

<a href="@Url.Action("Index", "Boutique")" class="btn btn-secondary mt-3">Retour</a>