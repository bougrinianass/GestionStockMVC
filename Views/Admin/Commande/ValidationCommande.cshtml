@model List<Commande>

<div>
	@foreach(var cmd in Model){
		@cmd.Statut
	}
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                A
            </th>
            <th>
                B
            </th>
            <th>
                C
            </th>
            <th>
                D
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCommande)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Statut) 
                </td>
                <td class="d-flex">
                    <form asp-action="Edit" method="get" asp-route-id="@item.Id">
                        <button class="btn btn-warning mx-1" type="submit">Edit</button>
                    </form>
                    <form asp-action="Details" method="post" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-info mx-1">Details</button>
                    </form>
                    <form asp-action="Delete" method="post" asp-route-id="@item.Id" onsubmit="return confirm('Confirmer la suppression du produit @item.Statut ?');">
                        <button type="submit" class="btn btn-danger mx-1">Supprimer</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>