@model List<Commande>


<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Commandes</title>
    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <h2 class="mb-4">Liste des Commandes</h2>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Client</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var commande in Model)
                {
                    <tr>
                        <td>@commande.Id</td>
                        <td>@commande.Client.Id</td>
                        <td>@commande.DateCommande.ToString("yyyy-MM-dd")</td>
                        <td>
                            <span class="badge bg-@(commande.Statut == "Livrée" ? "success" : "warning text-dark")">
                                @commande.Statut
                            </span>
                        </td>
                        <td>
                            <a href="@Url.Action("Details", "Commandes", new { id = commande.Id })" class="btn btn-sm btn-primary">Détails</a>
                            <a href="@Url.Action("Supprimer", "Commandes", new { id = commande.Id })" class="btn btn-sm btn-danger">Supprimer</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS (optionnel pour les composants interactifs) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
